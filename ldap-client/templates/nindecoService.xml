<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<!DOCTYPE template SYSTEM "../template.dtd">
<template>
	<askcontainer>1</askcontainer>
	<description>New Nindeco Service</description>
	<icon>ldap-user.png</icon>
	<invalid>0</invalid>
	<rdn>cn</rdn>
	<!--<regexp>^ou=People,o=.*,</regexp>-->
	<title>Generic: Nindeco Service</title>
	<visible>1</visible>
	<objectClasses>
	<objectClass id="organizationalRole"></objectClass>
	<objectClass id="posixAccount"></objectClass>
	<objectClass id="simpleSecurityObject"></objectClass>
	<objectClass id="PostfixBookMailAccount"></objectClass>
	</objectClasses>
	<attributes>
		<attribute id="uid">
			<display>User ID</display>
            <icon>ldap-uid.png</icon>
			<onchange>=autoFill(homeDirectory;/home/users/%uid%)</onchange>
			<onchange>=autoFill(mail;%uid%@nindeco.com)</onchange>
			<order>1</order>
			<page>1</page>
		</attribute>
		<attribute id="cn">
			<display>User ID</display>
            <icon>ldap-uid.png</icon>
			<order>2</order>
			<page>1</page>
		</attribute>
		<attribute id="description">
			<display>Description</display>
			<order>3</order>
			<page>1</page>
		</attribute>				
		<attribute id="userPassword">
			<display>Password</display>
			<!-- <helper>
					<display>Encryption</display>
					<id>enc</id>
					<value>=php.PasswordEncryptionTypes()</value>
			</helper> -->
			<icon>lock.png</icon>
			<order>4</order>
			<page>1</page>
			<post>=php.PasswordEncrypt(%enc%;%userPassword%)</post>
			<spacer>1</spacer>
			<verify>1</verify>
		</attribute>
		<attribute id="homeDirectory">
			<display>Home directory</display>
			<icon>folder.png</icon>
			<order>5</order>
			<page>1</page>
		</attribute>
		<attribute id="mailUidNumber">
			<display>Mail UID Number</display>
			<order>6</order>
			<readonly>1</readonly>
			<value>5000</value>
			<page>1</page>
		</attribute>
		<attribute id="mailGidNumber">
			<display>Mail GID Number</display>
			<order>7</order>
			<readonly>1</readonly>
			<value>5000</value>
			<page>1</page>
		</attribute>
		<attribute id="mail">
			<display>Email</display>
			<icon>mail.png</icon>
			<onchange>=autoFill(mailalias;%mail%)</onchange>
			<order>8</order>
			<page>1</page>
		</attribute>
		<attribute id="mailalias">
			<display>Email Alias</display>
			<icon>mail.png</icon>
			<order>9</order>
			<page>1</page>
		</attribute>	
	</attributes> 
</template>