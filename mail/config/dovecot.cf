# Разрешаем передавать по SSL пароль в открытом виде
ssl = yes
# Включаем авторизацию по незашифрованным данным
disable_plaintext_auth=no
# Переопределяем домашнюю директорию хранения аккаунта почты
# user - полное имя пользователя, значение получает из LDAP поля mail
# user делится на 2 переменные %d и %n
# %d - это домен, то что написано после '@'
# %n - это имя, то что написано до '@'
# mail_location = maildir: /var/mail/%d/%n